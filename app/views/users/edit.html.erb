<%= form_for  @user, url: user_path(@user), method: "PUT" do |f| %>

    <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
    </div>

    <div class="field">
        <%= f.label :location %><br />
        <%= f.text_field :location %>
    </div>

    <div class="field">
        <%= f.label :avatar %><br />
        <%= f.file_field :avatar %>
    </div>  

    <div class="field">
        <%= f.label :bio %><br />
        <%= f.text_area :bio%>
    </div>

    <div class="actions">
        <%= f.submit "Update Profile" %>
    </div>
<% end %>