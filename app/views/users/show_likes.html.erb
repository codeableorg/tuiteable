<% content_for :page_heading do %>
  <a href="#">‚Üê</a> Back to Explorer
<% end %>
<%= render partial: 'profile' %>
<div class="tuitsAndLikes">
  <div class="windows">
    <%= link_to 'Tuits', profile_path, class: 'windowActive' %>
    <%= link_to 'Likes', profile_likes_path, class: '' %>
  </div>
</div>
<div class="tuits">
  <% current_user.liked_tuits.each do |tuit|%>
    <div class="tweet-wrapper">
      <%= link_to tuit, class:'tweet' do %>
        <img id="image" src="/img/tanus.png">
        <div class="content">
          <h3><%= tuit.owner.name%><span> @<%=tuit.owner.username%> - <%= tuit.created_at.strftime '%-d %B' %></span> </h3>
          <p id='comment' ><%=tuit.body%></p>
        </div>
      <% end %>
      <div class="info">
        <%= link_to tuit, class:'comments' do %>
          <img src="/img/comment.png">
          <p><%=tuit.comments.count%></p>
        <% end %>
        <%= link_to like_tuit_path(tuit), class:'likes' do %>
          <img src="/img/like.png">
          <p><%=tuit.votes.count%></p>
        <% end %>
      </div>
    </div>
  <%end%>
</div>
