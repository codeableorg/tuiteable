<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form">
    <form>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <div class="field">
        <%= f.label :location %><br />
        <%= f.text_field :location, autofocus: true, autocomplete: "location" %>
      </div>
      <div class="field">
        <%= f.label :bio %><br />
        <%= f.text_field :bio, autofocus: true, autocomplete: "email" %>
      </div></br>
      <div class="actions">
        <%= f.submit "Update" %>
      </div></br>
      <div class="actions">
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>
      <%= link_to "Back", :back %>
    </form>
  </div>
<% end %>

