<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => 'sign_up', method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field inline">
    <%= f.label :username %><br />
    <%= f.text_field :username, autocomplete: "username" %>
  </div>

  <div class="field inline">
    <%= f.label :name %><br />
    <%= f.text_field :name, autocomplete: "name" %>
  </div>

  <div class="field inline">
    <%= f.label :location %><br />
    <%= f.text_field :location, autocomplete: "location" %>
  </div>

  <div class="field inline">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, autocomplete: "bio" %>
  </div>

   <div class="actions">
    <%= f.submit "Update Profile" %>
  </div>
<% end %>

