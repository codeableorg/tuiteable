<div class="separator">
  <a href=<%= root_path %>>
    <i class="fas fa-long-arrow-alt-left fa-2x"></i>
    <p class="separator-title ml-50">Back to Explorer</p>
  </a>
</div>
<div class="separator">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "signup") do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="signup-item">
        <%= f.label :username, class: "signup-label"%>
        <%= f.text_field :username, autofocus: true, autocomplete: "user", class: "signup-input" %>
    </div>
    <div class="signup-item">
      <%= f.label :display_name, class: "signup-label" %>
      <%= f.text_field :display_name, class: "signup-input"%>
    </div>
    <div class="signup-item">
      <%= f.label :email, class: "signup-label" %>
      <%= f.email_field :email, autocomplete: "email" ,class: "signup-input"%>
    </div>
    <div class="signup-item">
      <%= f.label :password, class: "signup-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "signup-input" %>
    </div>
    <div class="signup-item">
        <%= f.label :password_confirmation, class: "signup-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "signup-input" %>
    </div>
    <div class="signup-item">
      <%= f.label :location, class: "signup-label" %>
      <%= f.text_field :location,autocomplete: "location", class: "signup-input"%>
    </div>
    <div class="signup-item">
      <%= f.label :avatar, class: "signup-label" %>
      <div class="container-file">
        <label for="user_avatar" class="signup-upfile">Upload File</label>
        <%= f.file_field :avatar, class: "signup-file"%>
      </div>
    </div>
    <div class="signup-item">
      <%= f.label :bio, class: "signup-label" %>
      <%= f.text_area :bio, class: "signup-text" %>
    </div>
    <%= f.submit "Create an Account", class: "signup-button" %>
  <%end %>
</div>
