<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="my-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text-black rounded-lg outline-none focus:shadow-outline focus:bg-blue-100 py-1 px-2' %>
  </div>

  <div class="my-2">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'text-black rounded-lg outline-none focus:shadow-outline focus:bg-blue-100 py-1 px-2' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="my-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions text-center mb-3">
    <%= f.submit "Log in", class: 'bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded-full' %>
  </div>
<% end %>

<p class="text-white font-bold text-center">Not registered yet?</p>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="text-center mt-3 mb-8">
    <%= link_to "Sign up with email", new_registration_path(resource_name), class: 'bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded-full' %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="text-center text-sm"><%= link_to "Forgot your password?", new_password_path(resource_name) %></p>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %>
  <% end %>
<% end %>
