<div class= "sign_in_container">
<h2 class="sign_in_title">Log in to {tuiteable}</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label "email:", class: "label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email_field" %>
  </div>

  <div class="field">
    <%= f.label "password:", class: "label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "password_field" %>
  </div>


  <div class="actions">
    <%= f.submit "Log in", class: "button_submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
