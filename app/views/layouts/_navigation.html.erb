<header class="border border-gray-600 p-3">
  <div class="main__title">
    <h1 class="font-bold text-2xl inline">
      <%= link_to to_link do %>
        <% if arrow %>
          <%= image_tag "arrow.svg", class: 'inline', alt: 'Go back' %>
        <% end %>
        <%= title %>
      <% end %>
    </h1>
  </div>
  <div class="main__messages">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
</header>